                yellowColor: 'ffc40d',
                greenColor: '00a300',
                redFrom: (valueOfEstatus == 0) ? -55 : (valueOfEstatus * -1),
                redTo: (valueDiv3 * -1),
                yellowFrom: (valueDiv3 * -1),
                yellowTo: valueDiv3,
                greenFrom: valueDiv3,
                greenTo: (valueOfEstatus == 0) ? 55 : valueOfEstatus,
                max: (valueOfEstatus == 0) ? 55 : valueOfEstatus,
                min: (valueOfEstatus == 0) ? -55 : (valueOfEstatus * -1)
            };
            
